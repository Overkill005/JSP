<!DOCTYPE html>
<html>
<head>
    <title>Order Management</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#prodName').on('change', function () {
                var prodName = $(this).val();
                $.ajax({
                    type: 'POST',
                    url: 'FetchProductDetailsServlet',
                    data: {prodName: prodName},
                    success: function (data) {
                        var product = JSON.parse(data);
                        $('#prodRate').val(product.prodRate);
                        $('#prodQty').val(product.prodQty);
                    }
                });
            });

            $('#orderForm').submit(function (event) {
                event.preventDefault();
                var formData = $(this).serialize();
                $.ajax({
                    type: 'POST',
                    url: 'OrderServlet',
                    data: formData,
                    success: function (response) {
                        $('#orderDetails').html(response);
                    }
                });
            });

            // Fetch product names from the database and populate the dropdown
            $.ajax({
                type: 'POST',
                url: 'FetchProductNamesServlet',
                success: function (data) {
                    var productNames = JSON.parse(data);
                    var options = '';
                    for (var i = 0; i < productNames.length; i++) {
                        options += '<option value="' + productNames[i] + '">' + productNames[i] + '</option>';
                    }
                    $('#prodName').html(options);
                }
            });
        });
    </script>
</head>
<body>
<h2>Order Management</h2>
<form id="orderForm" action="OrderServlet" method="post">
    <label for="prodName">Product Name:</label>
    <select id="prodName" name="prodName"></select><br><br>
    
    <label for="prodRate">Product Rate:</label>
    <input type="text" id="prodRate" name="prodRate" readonly><br><br>
    
    <label for="prodQty">Product Quantity:</label>
    <input type="text" id="prodQty" name="prodQty" readonly><br><br>
    
    <label for="orderQty">Order Quantity:</label>
    <input type="number" id="orderQty" name="orderQty" required><br><br>
    
    <input type="submit" value="Place Order">
</form>
<div id="orderDetails"></div>
</body>
</html>
