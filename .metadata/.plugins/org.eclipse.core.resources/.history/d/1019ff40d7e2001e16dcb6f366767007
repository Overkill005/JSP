<!DOCTYPE html>
<html>
<head>
    <title>Order Management</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#prodName').on('change', function () {
                var prodName = $(this).val();
                $.ajax({
                    type: 'POST',
                    url: 'FetchProductRateServlet',
                    data: {prodName: prodName},
                    success: function (data) {
                        var dataArray = data.split(',');
                        $('#prodRate').val(dataArray[0]);
                        $('#prodQty').val(dataArray[1]);
                    }
                });
            });

            $('#orderForm').submit(function (event) {
                event.preventDefault();
                var formData = $(this).serialize();
                $.ajax({
                    type: 'POST',
                    url: 'OrderServlet',
                    data: formData,
                    success: function (response) {
                        $('#orderDetails').html(response);
                    }
                });
            });
        });
    </script>
</head>
<body>
<h2>Order Management</h2>
<form id="orderForm">
    <label for="prodName">Product Name:</label>
    <select id="prodName" name="prodName">
        <!-- Populate options dynamically using AJAX or server-side scripting -->
        <option value="Product 1">Product 1</option>
        <option value="Product 2">Product 2</option>
        <!-- Add more options as needed -->
    </select><br><br>
    
    <label for="prodRate">Product Rate:</label>
    <input type="text" id="prodRate" name="prodRate" readonly><br><br>
    
    <label for="prodQty">Product Quantity:</label>
    <input type="text" id="prodQty" name="prodQty" readonly><br><br>
    
    <label for="orderQty">Order Quantity:</label>
    <input type="number" id="orderQty" name="orderQty" required><br><br>
    
    <input type="submit" value="Place Order">
</form>
<div id="orderDetails"></div>
</body>
</html>
